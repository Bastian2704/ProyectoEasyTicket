@model IEnumerable<ProyectoEasyTicket.Models.Ticket>

@{
    ViewData["Title"] = "Inicio | EasyTicket";
}

<div class="text-center">
    <h1 class="display-4">¡Bienvenido a EasyTicket!</h1>
    <p class="lead">Compra y vende entradas para los mejores eventos deportivos, conciertos y más.</p>
    <p>Explora nuestra <a href="@Url.Action("Index", "Tickets1")">colección de eventos disponibles</a> y asegura tu lugar.</p>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <h3>Encuentra tus eventos favoritos</h3>
        <p>Descubre conciertos, eventos deportivos y espectáculos cerca de ti.</p>
    </div>
    <div class="col-md-4">
        <h3>Compra con confianza</h3>
        <p>En EasyTicket, garantizamos seguridad en cada transacción.</p>
    </div>
    <div class="col-md-4">
        <h3>¿Tienes entradas? ¡Véndelas!</h3>
        <p>Publica tus tickets y alcanza a millones de compradores en nuestra plataforma.</p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Evento</th>
            <th>Fecha</th>
            <th>Lugar</th>
            <th>Butaca o Sección</th>
            <th>Precio</th>
            <th>Teléfono</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>


        @{
            int contador = 0; 
        }

        @foreach (var item in Model)
        {
            if (contador >= 3)
            {
                break; 
            }
            
            if (item.Vendido == false)
            {
                contador++;
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Evento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lugar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ButacaSeccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendido)
                </td>

            </tr>
            }
            
        }
    <tbody>
</table>




